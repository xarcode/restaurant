    <script>
        const navToggle = document.querySelector('#menu_controller');
        const nav = document.querySelector('.nav');
        const page = document.querySelector('.menu-page-full');

        navToggle.addEventListener('click', () => {
            nav.style.display = 'block';
            nav.classList.toggle('nav--visible');
            page.classList.toggle('page--invisible');
            // setTimeout(() => {
            //     page.classList.toggle('page--hidden');
            // }, 300);

        });
        const navLinks = document.querySelectorAll('.nav-links');

        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                nav.classList.remove('nav--visible');
                page.classList.remove('page--invisible');
            });
        });
    </script>
    <script>
        window.addEventListener('scroll', () => {
            const controller = document.querySelector('#menu_controller');
            if (window.scrollY > 50) {
                controller.classList.add('change-color');
            } else {
                controller.classList.remove('change-color');
            }
        });

    </script>
