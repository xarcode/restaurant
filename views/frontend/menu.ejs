                </button>
            </a>
        </section>

        <!-- BEGIN: Category and Food    Items -->
        <div class="menu-body grid grid-cols-1 gap-12">
            <% categories.forEach(function(category) { %>
                <div class="menu-page">
                    <div class="grid lg:grid-cols-3 sm:grid-cols-1 menu-name">
                        <hr>
                        <h1 class="text-xl font-light text-center mt-4 mb-4" style="color: #FCC86C;">
                            <%= category.title %>
                        </h1>
                        <hr>
                    </div>
                    <ol>

                        <!-- Iterate over food items and display only those whose category is category._id-->
                        <% foodItems.forEach(function(foodItem) { var foodItemCategory=foodItem.categoryId; var
                            categoryID=category._id; %>
                            <% if (JSON.stringify(foodItemCategory)==JSON.stringify(categoryID)) { %>
                                <li class="menu-item">
                                    <h1 class="item-name">
                                        <span class="item-id">
                                            <%= foodItem.dishId %>.
                                        </span>
                                        <%= foodItem.title %><span class="serving-size">
                                                <%= foodItem.hasVariety ? "(" + foodItem.code + ")" : '' %>
                                            </span>
                                    </h1>
                                    <div class="flex item-content">
                                        <div class="flex-auto w-9/12 item-description">
                                            <%= foodItem.description %>
                                        </div>
                                        <div class="flex-auto w-3/12 item-price">
                                            <%= foodItem.hasVariety ? '' : foodItem.cost %>
                                        </div>
                                    </div>
                                    <% if (foodItem.hasVariety) { %>
                                        <% foodItem.varieties.forEach(function(variety, index) { %>
                                            <div class="flex item-content">
                                                <div class="flex-auto w-9/12 item-addons-container">
                                                    <p class="item-addon"><span class="addon-hiphen">-</span>
                                                        <%= variety %><span class="addon-custom">
                                                                <%= foodItem.varietiesCode[index].trim().length> 0 ? "("
                                                                    + foodItem.varietiesCode[index] + ")" : ''%>
                                                            </span>
                                                    </p>
                                                </div>
                                                <div class="flex-auto w-3/12 item-price">
                                                    <%= foodItem.varietiesCost[index] %>
                                                </div>
                                            </div>
                                            <% }) %>
                                                <% } %>
                                </li>

                                <% } %>
                                    <% }) %>
                    </ol>
                </div>
                <% }) %>
        </div>

